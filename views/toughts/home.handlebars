<div class="home-header">
    {{#if search}}
    <h1>VocÃª esta busando por: <span>{{search}}</span></h1>
    {{#if toughtQty}}
    <p>Foram encontrados <span>{{toughtQty}}</span> pensamentos.</p>
    {{else}}
    <p>Nenhum pensamento foi encontrdo para termo: <span>{{search}}</span></p>
    {{/if}}
    {{else}}
    <h1>conheca alguns dos nosso <span>pensamentos.</span></h1>
    {{/if}}
    <form action="/" method="get">
        <input type="text" name="search" placeholder="Esta buscando por algo?">
        <input type="submit" class="btn" value="Buscar">
    </form>
    <div class="order-cantainer">
        <span>Ordernar por:</span>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"> <i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"> <i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/">limpar</a>
    </div>
</div>
<div class="toughts-container">
    {{#each toughts}}
    <figure>
        <blockquote>
            "{{this.title}}"
        </blockquote>
        <figcaption>
            Por: <span>{{this.user.name}}</span>
        </figcaption>
    </figure>
    {{/each}}
</div>